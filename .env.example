# Fulloch Environment Variables
# Copy this file to .env and edit values.
# Runtime is now fully environment-driven (no config.yml required).

# =============================================================================
# Core Runtime
# =============================================================================
FULLOCH_USE_AI=true
FULLOCH_USE_TINY_ASR=false
FULLOCH_USE_TINY_TTS=false
FULLOCH_VOICE_CLONE=cori

# =============================================================================
# API Server
# =============================================================================
FULLOCH_HOST=0.0.0.0
FULLOCH_PORT=8000
FULLOCH_LOG_LEVEL=info
FULLOCH_API_KEY=
FULLOCH_CHAT_MODEL=fulloch-qwen3-slm
FULLOCH_STT_MODEL=qwen3-asr-1.7b
FULLOCH_TTS_MODEL=qwen3-tts-1.7b

# =============================================================================
# Docker Image Overrides (compose)
# =============================================================================
FULLOCH_IMAGE=ghcr.io/k0walski8/fulloch-hagp:latest
FULLOCH_GPU_IMAGE=ghcr.io/k0walski8/fulloch-hagp:gpu-latest

# =============================================================================
# Tool Enablement
# =============================================================================
ENABLE_WEATHER_TIME=true
ENABLE_SEARCH_WEB=true
ENABLE_HOME_ASSISTANT=false
ENABLE_SPOTIFY=false
ENABLE_PHILIPS_HUE=false
ENABLE_GOOGLE_CALENDAR=false
ENABLE_AIRTOUCH=false
ENABLE_THINQ=false
ENABLE_WEBOS=false
ENABLE_PIONEER_AVR=false

# =============================================================================
# Home Assistant Tool
# =============================================================================
HOME_ASSISTANT_URL=http://localhost:8123
HOME_ASSISTANT_TOKEN=
HOME_ASSISTANT_TIMEOUT=10
# JSON map, example: {"living room lights":"light.living_room"}
HOME_ASSISTANT_ENTITY_ALIASES={}

# =============================================================================
# Web Search
# =============================================================================
SEARCH_SEARXNG_URL=http://192.168.50.153:30053
OPENROUTER_WEB_SEARCH_ENABLED=false
OPENROUTER_API_KEY=
OPENROUTER_MODEL=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# =============================================================================
# Weather (BOM)
# =============================================================================
BOM_HOST=ftp.bom.gov.au
BOM_PATH=/anon/gen/fwo/IDN11060.xml
BOM_DEFAULT_LOCATION=Sydney

# =============================================================================
# Spotify
# =============================================================================
SPOTIPY_CLIENT_ID=
SPOTIPY_CLIENT_SECRET=
SPOTIPY_REDIRECT_URI=http://localhost:8888/callback
# Name of target playback device (optional)
SPOTIFY_DEVICE_ID=
SPOTIFY_USE_AVR=false

# =============================================================================
# Philips Hue
# =============================================================================
PHILIPS_HUE_HUB_IP=
PHILIPS_HUE_CONFIG_PATH=./data/.python_hue

# =============================================================================
# Pioneer AVR
# =============================================================================
PIONEER_AVR_HOST=
PIONEER_AVR_PORT=60128

# =============================================================================
# LG WebOS
# =============================================================================
WEBOS_TV_IP=
WEBOS_TV_MAC=

# =============================================================================
# LG ThinQ
# =============================================================================
THINQ_ACCESS_TOKEN=
THINQ_COUNTRY_CODE=AU
THINQ_CLIENT_ID=

# =============================================================================
# Google Calendar
# =============================================================================
GOOGLE_CREDENTIALS_FILE=./data/credentials.json
GOOGLE_TOKEN_FILE=./data/token.json

# =============================================================================
# Airtouch HVAC
# =============================================================================
# JSON map, example: {"living room":0,"bedroom":1,"office":2}
AIRTOUCH_ZONE_IDS={}
